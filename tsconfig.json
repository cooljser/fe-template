{
  "compileOnSave": false,
  "compilerOptions": {
    "disableSizeLimit": true,
    "allowJs": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2017",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "paths": {
      "utils/*": ["./src/utils/*"],
      "~/*": ["./src/*"]
    },
    "outDir": "./build"
  },
  "include": ["./src/**/*", "*.d.ts"],
  "exclude": ["build", "node_modules"]
}

